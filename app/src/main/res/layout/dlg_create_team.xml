<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp">

    <TextView
        style="@style/PrimaryBoldTextView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dlg_team_title" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTeam"
        android:theme="@style/InputTextTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietTeam"
            style="@style/MaterialEditText14"
            android:hint="@string/dlg_team_name"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>