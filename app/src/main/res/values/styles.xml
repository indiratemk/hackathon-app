<resources>

    <!--region BASE THEME-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorIndigo500</item>
        <item name="colorPrimaryDark">@color/colorIndigo500</item>
        <item name="colorAccent">@color/colorWhite100</item>
        <item name="android:navigationBarColor">@color/colorBlack200</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite100</item>
        <item name="colorPrimaryDark">@color/colorWhite100</item>
        <item name="colorAccent">@color/colorIndigo500</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite100</item>
        <item name="colorPrimaryDark">@color/colorBlack200</item>
        <item name="colorAccent">@color/colorBlue200</item>
        <item name="android:navigationBarColor">@color/colorBlack200</item>
    </style>

    <style name="TransparentTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!--endregion-->

    <!--region PRIMARY TEXT VIEW-->
    <style name="PrimaryTextView14" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack100</item>
    </style>

    <style name="PrimaryTextView16" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack100</item>
    </style>

    <style name="PrimaryTextView18" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack100</item>
    </style>

    <style name="PrimaryTextView20" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorBlack100</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--endregion-->

    <!--region PRIMARY BOLD TEXT VIEW-->
    <style name="PrimaryBoldTextView14" parent="PrimaryTextView14">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryBoldTextView16" parent="PrimaryTextView16">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryBoldTextView18" parent="PrimaryTextView18">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryBoldTextView20" parent="PrimaryTextView20">
        <item name="android:textStyle">bold</item>
    </style>
    <!--endregion-->

    <!--region SECONDARY TEXT VIEW-->
    <style name="SecondaryTextView14" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorGray500</item>
    </style>
    <!--endregion-->

    <!--region ACCENT TEXT VIEW-->
    <style name="AccentTextView14" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorIndigo500</item>
    </style>
    <!--endregion-->

    <!--region MATERIAL EDIT TEXT-->
    <style name="InputTextOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorGray400</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="MaterialEditText14" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack100</item>
    </style>
    <!--endregion-->

    <!--region PRIMARY BUTTON-->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorIndigo500</item>
        <item name="android:textColor">@color/colorWhite100</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundedPrimaryButton" parent="PrimaryButton">
        <item name="android:background">@drawable/shape_button_primary</item>
    </style>

    <style name="RoundedErrorButton" parent="PrimaryButton">
        <item name="android:background">@drawable/shape_button_error</item>
    </style>
    <!--endregion-->

    <!--region PROGRESS BAR-->
    <style name="WhiteCircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorWhite100</item>
    </style>

    <style name="BlueCircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorIndigo500</item>
    </style>
    <!--endregion-->

    <!--region BOTTOM SHEET-->
    <style name="RoundedBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
    </style>

    <style name="RoundedBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>
    <!--endregion-->
</resources>
